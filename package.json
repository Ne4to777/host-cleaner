{
  "name": "host-cleaner",
  "version": "1.2.0",
  "description": "Host Cleaner",
  "bin": "bin/host-cleaner.js",
  "scripts": {
    "build": "npm run build:ts && npm run build:files",
    "build:ts": "npm run remove:dist && npx tsc --build tsconfig.release.json",
    "build:files": "cp package.json package-lock.json README.md .npmrc .npmignore dist/",
    "start": "node -r esbuild-runner/register src/bin/host-cleaner.ts",
    "watch": "npx nodemon -q -w 'src/**' -e 'ts,json' -x 'node -r esbuild-runner/register src/index.ts'",
    "lint": "npx eslint --ext .ts src/",
    "lint:fix": "npm run lint -- --fix",
    "lint:typescript": "npx tsc --build tsconfig.lint.json",
    "prepublish:npm": "npm run build && npm run lint",
    "publish:npm": "npm publish dist/ --registry='http://npm.yandex-team.ru' --public",
    "clean": "npm run remove:dist",
    "remove:dist": "rm -rf dist",
    "revert": "rm -rf node_modules && rm -rf package-lock.json",
    "reinstall": "npm run revert && npm i",
    "clean:reports": "rm -rf reports",
    "test:jest": "NODE_ENV=TESTING npx jest",
    "test:jest:watch": "NODE_ENV=TESTING npx jest --watch",
    "task:cleanDismissedUsers": "npm run start -- cleanDismissedUsers",
    "task:cleanOrphanedUsers": "npm run start -- cleanOrphanedUsers",
    "task:cleanNodeModules": "npm run start -- cleanNodeModules",
    "task:cleanOldNodeModules": "npm run start -- cleanOldNodeModules",
    "task:cleanOldUserServices": "npm run start -- cleanOldUserServices",
    "task:mailToDoubledUsers": "npm run start -- mailToDoubledUsers",
    "task:mailAboutGitBranches": "npm run start -- mailAboutGitBranches"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.4",
    "dotenv": "^10.0.0",
    "emailjs": "^3.7.0",
    "node-ssh": "^12.0.2",
    "yargs": "^17.3.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@types/jest": "^27.4.0",
    "@types/node": "^15.14.9",
    "@types/node-ssh": "^7.0.1",
    "@types/yargs": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@yandex-market/codestyle": "^3.3.1",
    "babel-jest": "^27.4.6",
    "babel-eslint": "^10.1.0",
    "esbuild": "^0.14.11",
    "esbuild-runner": "^2.2.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.0.0",
    "eslint-plugin-market": "^0.21.0",
    "jest": "^27.4.7",
    "nodemon": "^2.0.15",
    "typescript": "^4.5.4"
  }
}
